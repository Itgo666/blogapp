<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
		  <%= gravatar_for @user,size:40 %>
			<h1>
					<%= @user.name %><br/>
					<%= @user.email %><br/>
					<%= @user.created_at %><br/>
					<%= Time.now %>
			</h1>
		</section>
	</aside>
</div>
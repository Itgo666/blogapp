<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
		  <%= gravatar_for @user,size:40 %>
			<h1>
					<%= @user.name %><br/>
					<%= @user.email %><br/>
					<%= @user.created_at %><br/>
					<%= Time.now %>
			</h1>
		</section>
		<% if login? && current_user.id == @user.id %>
			<%= form_for(@micropost,class:"form-control") do |f| %>
				<%= render 'shared/error_messages' ,record:@micropost %>
				<%= f.text_area :content,class:"micropost-content" %>
				<%= f.submit 'Post',class:"btn btn-primary col-xs-2" %>
			<% end %>
		<% end %>
	</aside>
	<div class="col-md-6">
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<%= render @microposts %>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>

